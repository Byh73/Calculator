<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@color/back">
 <androidx.cardview.widget.CardView
     android:id="@+id/cart"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:cardCornerRadius="20dp"
     app:cardBackgroundColor="@color/white"
     android:layout_marginTop="15dp">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="344dp"
         android:layout_height="200dp">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:backgroundTint="@color/blue"
             android:text="Category"
             android:textAllCaps="false"
             app:cornerRadius="10dp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <ImageView android:id="@+id/heart"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:src="@drawable/heart"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_margin="20dp"
             />
         <TextView android:id="@+id/result"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:text="result"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textStyle="bold"
             android:textColor="@color/back"
             />
         <LinearLayout
             android:id="@+id/options"
             android:layout_width="296dp"
             android:layout_height="36dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="16dp"
             android:layout_marginStart="32dp">
             <LinearLayout
                 android:layout_gravity="center"
                 android:orientation="vertical"
                 android:layout_width="48dp"
                 android:layout_height="32sp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="free"
                     android:textStyle="bold"
                     android:layout_gravity="center"
                     android:textColor="@color/back"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="PriceðŸ’°"
                     android:textSize="10sp"
                     android:layout_gravity="center"
                     android:textColor="@color/back"/>
             </LinearLayout>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="107dp"
             android:layout_height="35.94dp"
             android:layout_marginStart="39dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <ImageView
                     android:rotation="270"
                     android:layout_width="24dp"
                     android:layout_height="23dp"
                     android:src="@drawable/user_icon1"/>
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="23dp"
                     android:layout_marginHorizontal="4dp"
                     android:src="@drawable/user_icon2"/>
                 <ImageView
                     android:layout_width="24dp"
                     android:layout_marginEnd="3dp"
                     android:layout_height="23dp"
                     android:src="@drawable/user_icon3"/>
                 <FrameLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="23dp"
                         android:src="@drawable/user_icon4"
                         />
                     <TextView
                         android:text="+"
                         android:textColor="@color/white"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="8.5sp"
                         android:paddingTop="9dp"
                         android:paddingStart="13.5dp"
                         />
                 </FrameLayout>
             </LinearLayout>
             <TextView
                 android:text="Participants"
                 android:textSize="10sp"
                 android:layout_marginTop="1dp"
                 android:textColor="@color/back"
                 android:textAlignment="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_marginStart="20dp"
             android:layout_height="wrap_content">
             <FrameLayout
                 android:layout_width="81dp"
                 android:layout_height="10dp"
                 android:layout_marginTop="9.5dp"
                 android:background="@drawable/loading_bar"
                 />
             <TextView
                 android:text="Accessibility"
                 android:layout_marginTop="3dp"
                 android:textSize="10sp"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/back"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
     </LinearLayout>
     </androidx.constraintlayout.widget.ConstraintLayout>
 </androidx.cardview.widget.CardView>

    <Button android:id="@+id/butt"
        android:layout_width="0dp"
        android:layout_height="47dp"
        app:layout_constraintTop_toBottomOf="@id/cart"
        app:layout_constraintStart_toStartOf="@id/cart"
        app:layout_constraintEnd_toEndOf="@id/cart"
        android:layout_marginTop="25dp"
        android:background="@drawable/gradient"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"/>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintBottom_toTopOf="@id/spinner"
     android:text="Category"
     app:layout_constraintStart_toStartOf="@id/spinner"
     android:textColor="@color/grey2"
     android:textSize="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/spinner"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@id/rg1"
        android:textColor="@color/grey2"
        android:textSize="10sp"
        android:layout_marginStart="13sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rg1"
        android:text="Accessibility"
        app:layout_constraintStart_toStartOf="@id/rg2"
        android:textColor="@color/grey2"
        android:layout_marginTop="40dp"
        android:textSize="10sp"
        android:layout_marginStart="13sp"/>
    <FrameLayout
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/butt"
        app:layout_constraintStart_toStartOf="@id/butt"
        android:background="@drawable/spinner_bg"
        android:layout_marginTop="51dp">
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="158dp"
            android:layout_height="41dp"/>
    </FrameLayout>
<com.google.android.material.slider.RangeSlider
    android:id="@+id/rg1"
    android:layout_width="200dp"
    android:layout_height="5.6dp"
    app:thumbColor="@color/thumb_color"
    app:thumbHeight="14dp"
    app:thumbWidth="14dp"
    app:trackColorActive="@color/active_line_color"
    app:trackColorInactive="@color/white"
    app:trackHeight="5.6dp"
    android:valueFrom="0.0"
    android:valueTo="100.0"
    app:values="@array/default_values"
    app:layout_constraintTop_toBottomOf="@id/butt"
    app:layout_constraintStart_toEndOf="@id/spinner"
    android:layout_marginTop="40dp"/>
<com.google.android.material.slider.RangeSlider
    android:id="@+id/rg2"
    android:layout_width="200dp"
    android:layout_height="5.6dp"
    app:thumbColor="@color/thumb_color"
    app:thumbHeight="14dp"
    app:thumbWidth="14dp"
    app:trackColorActive="@color/active_line_color"
    app:trackColorInactive="@color/white"
    app:trackHeight="5.6dp"
    android:valueFrom="0.0"
    android:valueTo="100.0"
    app:values="@array/default_values"
    app:layout_constraintTop_toBottomOf="@id/butt"
    app:layout_constraintStart_toEndOf="@id/spinner"
    android:layout_marginTop="130dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>